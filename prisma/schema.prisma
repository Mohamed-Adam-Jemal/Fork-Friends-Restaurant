datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Table {
  id       Int           @id @default(autoincrement())
  number   Int           @unique
  seats    Int
  type     String        // e.g., "Indoor" or "Outdoor"
  availability Boolean @default(true)
  bookings Reservation[] // relation
}

model Reservation {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String
  phone           String
  date            DateTime
  time            String
  guests          Int
  specialRequests String?
  occasion        String?
  seating         String
  tableNumber     Int
  table           Table     @relation(fields: [tableNumber], references: [number])
  createdAt       DateTime @default(now())
}


model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstName String
  name      String
  age       Int
  role      String
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  category    String?
  cuisine     String?
  chefChoice  Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  name      String   // Customer's name
  email     String
  phone     String
  total     Float
  items     Json     //JSON array of ordered items
  createdAt DateTime @default(now())
}